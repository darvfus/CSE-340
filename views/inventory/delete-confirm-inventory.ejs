<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>
<form action="/inv/delete/" method="post" id="deleteForm">
    <label>Make <input type="text" name="inv_make" id="inv_make" readonly value="<%= locals.inv_make%>"></label>
    <label>Model <input type="text" name="inv_model" id="inv_model" readonly value="<%= locals.inv_model%>"></label>
    <label>Year <input type="number" name="inv_year" id="inv_year" readonly value="<%= locals.inv_year%>"></label>
    <label>price <input type="number" name="inv_price" id="inv_price" readonly value="<%= locals.inv_price%>"></label>
    <p>Confirm Deletion - The delete is permanent.</p>
    <button type="submit">Delete Vehicle</button>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>