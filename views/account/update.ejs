<% if (title) { %>
    <h1 id="updateTitle"><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<section id="updateForms">
  <form action="/account/update" method="post">
    <label>First Name: <input type="text" name="account_firstname" id="account_firstname" required value="<%= locals.accountData.account_firstname %>"> </label>
    <label>Last Name: <input name="account_lastname" type="text" required value="<%= locals.accountData.account_lastname %>"></label>
    <label>Email: <input name="account_email" type="email" required value="<%= locals.accountData.account_email %>"></label>
    <button type="submit">Update Account</button>
    <input type="hidden" name="account_id"
    <% if(locals.accountData.account_id) { %> value="<%= locals.accountData.account_id %>"
    <% } %>>
  </form>
  <form action="/account/change" method="post">
    <label>Password: <input name="account_password" type="password" placeholder="***********" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
    <p id="enforce">Note: By entering a password it will change the current password <br>Password must be: 12 characters in length, minimum, contain at least 1 capital letter, and 1 special character</p>
    <button type="submit">Change Password</button>
    <input type="hidden" name="account_id"
    <% if(locals.accountData.account_id) { %> value="<%= locals.accountData.account_id %>"
    <% } %>>
  </form>
</section>
<script src="/js/script.js"></script>