<% if (title) { %>
    <h1 id="loginTitle"><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<section id="f2">
  <form action="/account/register" method="post">
    <label>First Name: <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>"</label>
    <label>Last Name: <input name="account_lastname" type="text" required value="<%= locals.account_lastname %>"></label>
    <label>Email: <input name="account_email" type="email" placeholder="mordor@gmail.com" required value="<%= locals.account_email %>"></label>
    <label>Password: <input name="account_password" type="password" placeholder="***********" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
    <p id="enforce">Password must be: 12 characters in length, minimum, contain at least 1 capital letter, 1, and 1 special character</p>
    <button type="submit">Register</button>
  </form>
</section>
<script src="/js/script.js"></script>