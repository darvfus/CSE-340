<% if (title) { %>
    <h1 id="loginTitle"><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<section id="f1">
  <form id="loginForm" action="/account/login" method="post">
    <label>Email: <input name="account_email" type="email" placeholder="mordor@gmail.com" required value="<%= locals.account_email %>"></label>
    <label>Password: <input name="account_password" type="password" placeholder="***********" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
    <p id="enforce">Password must be: 12 characters in length, minimum, contain at least 1 capital letter, 1, and 1 special character</p>
    <button type="submit">LOGIN</button>
  </form>
  <p id="reg">No account? <a href="./register">Sign-up</a></p>
</section>
<script src="/js/script.js"></script>