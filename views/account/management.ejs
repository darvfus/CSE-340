<% if (title) { %>
    <h1 id="loginTitle"><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<% if ( locals.accountData.account_type == "Client" ) { %>
  <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <a href="/account/update/<%- locals.accountData.account_id %>">Click to update account information</a>
  <% } else { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <a href="/account/update/<%- locals.accountData.account_id %>">Click to update account information</a>
    <h3>Inventory Management</h3>
    <p><a href="/inv">Manage the Inventory</a></p>
<% } %>
<h2>You're logged in</h2>